<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp.MainPage"
             Title="Fitness App">



    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Resumo Diário"
                FontSize="24"
                HorizontalOptions="Center"/>
        <Frame BackgroundColor="LightGray" CornerRadius="10" Padding="10">
            <VerticalStackLayout>
                <Label Text="Peso Atual: 70Kg" FontSize="18" />
                <Label Text="Calorias Consumidas: 0 kcal" FontSize="18" />
                <Label Text="Calorias Gastas: 0 kcal" FontSize="18" />
            </VerticalStackLayout>
        </Frame>

        <Button Text="Registrar Refeição" BackgroundColor="DodgerBlue" TextColor="White" />
        <Button Text="Registrar Exercício" BackgroundColor="ForestGreen" TextColor="White" />
        <Button Text="Ver Relatórios" BackgroundColor="Orange" TextColor="White" />
        <Button Text="Configurar Informações" Clicked="OnConfigureClicked" BackgroundColor="DodgerBlue" TextColor="White" />



    </VerticalStackLayout>
    

</ContentPage>
